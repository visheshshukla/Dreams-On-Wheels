<%- include("partials/header.ejs")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit Profile</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/users/<%= user.id %>?_method=PUT" enctype="multipart/form-data" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="First Name" name="user[fname]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Last Name" name="user[lname]">
				</div>
				<div class="form-group">
					<label for="image"> Avatar Image </label>
					<input class="form-control" type="file" id="image" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Date Of Birth" name="user[dob]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Email Id" name="user[email]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="About You" name="user[about]">
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				<div class="form-group">
					<input class="btn btn-sm btn-success btn-block" type="button" value="Go Back!" 			            						onclick="history.back()">
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer.ejs")%>