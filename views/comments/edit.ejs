<%- include("../partials/header.ejs")%>


<div class="container">
	<div class="row">
		<h1 style="text-align:center;"> Edit A Comment </h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/showrooms/<%= showroom_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" rows="3" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				<div class="form-group">
					<input class="btn btn-sm btn-success btn-block" type="button" value="Go Back!" 
					onclick="window.location.href='/showrooms/<%= showroom_id %>'">
				</div>
			</form>
		</div>
	</div>
</div>


<%- include("../partials/footer.ejs")%>