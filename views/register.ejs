<%- include("partials/header.ejs")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Sign Up</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/register" method="POST">
				<h4 style = "text-align:center;"> Already A User 
					<input class="btn btn-sm btn-info" type="button" value=" Login " 			            									onclick="window.location.href='/login'">
				</h4>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="User Name" name="username">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" placeholder="Password" name="password">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" placeholder="Admin Secret Code" name="adminPassword">
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				<div class="form-group">
					<input class="btn btn-sm btn-success btn-block" type="button" value="Go Back!" 			            						onclick="window.location.href='/showrooms'">
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer.ejs")%>