<%- include("../partials/header.ejs")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit <%= showroom.name %> Showroom</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/showrooms/<%= showroom._id %>?_method=PUT" enctype="multipart/form-data" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= showroom.name %>" name="showroom[name]">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input class="form-control" type="file" id="image" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= showroom.contact %>" name="showroom[contact]">
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="4" name="showroom[des]"><%= showroom.des %></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type='text' name='showroom[location]' value="<%= showroom.location %>">
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				<div class="form-group">
					<input class="btn btn-sm btn-success btn-block" type="button" value="Go Back!" 			            						onclick="window.location.href='/showrooms/<%= showroom._id %>'">
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs")%>