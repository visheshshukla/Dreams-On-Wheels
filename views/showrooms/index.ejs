<%- include("../partials/header.ejs")%>

<div class="container">
	
	<div class="jumbotron">
		<div class="container">
  			<h1 class="display-4">Welcome To Showrooms Page</h1>
  			<p class="lead">Find The Ride Of Your Dreams Here</p>
			<div class="row">
				<div class="col-lg-12">
					<p>	<a class="btn btn-primary" href="/showrooms/new">Add A New Showroom</a> </p>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<% showrooms.forEach(function(a){%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src= "<%=a.image%>">
				<div class="caption">
					<h4> <%= a.name  %> </h4>
				</div>	
	            <p>
                   <a href="/showrooms/<%= a._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<%});%>
	</div>

</div>	
	
<%- include("../partials/footer.ejs")%>





