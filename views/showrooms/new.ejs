<%- include("../partials/header.ejs")%>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Create A New Showroom</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/showrooms" enctype="multipart/form-data" method="POST" >
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name" name="showroom[name]">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input class="form-control" type="file" id="image" name="image" accept="image/*" required>
				</div>
				<div class="form-group">
					<input class="form-control" id="image" type="number" placeholder="Contact No." name="showroom[contact]">
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="4" placeholder="Description" name="showroom[des]"></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type='text' placeholder='Location' name='showroom[location]' >
				</div>
				<div class="form-group">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				<div class="form-group">
					<input class="btn btn-sm btn-success btn-block" type="button" value="Go Back!" 			            						onclick="window.location.href='/showrooms'">
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs")%>